{
  "manifest_version": 2,
  "name": "FB Post Sender and Poster",
  "version": "1.0",
  "description": "Sends and posts content on Facebook",
  "permissions": [
    "activeTab",
    "storage",
    "*://*.facebook.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content_script.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}