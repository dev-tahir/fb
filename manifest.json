{
  "manifest_version": 2,
  "name": "Facebook Post Capture & Publisher",
  "version": "1.0",
  "description": "Capture and post content to Facebook",
  "permissions": ["activeTab", "https://*.facebook.com/*", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content_script.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "icons": {
    "48": "icon48.png"
  }
}
